@model IEnumerable<string>

    <a class="btn btn-outline-secondary" asp-action="Index"
       asp-controller="Home" asp-route-category="">Home</a>

@foreach (string category in Model)
{
    <a class="btn btn-toolbar @(category == ViewBag.SelectedCategory? "btn-primary": "btn-outline-secondary")"
       asp-action="Index" 
       asp-route-category="@category" 
       asp-route-productPage="1">
        @category
    </a>
}