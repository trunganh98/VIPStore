@model Product


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right"></span>
        </h3>
        <img src="~/Image/@Model.UrlImage" alt="Alternate Text" width="250" height="200" /> <br />
        <div class="card-text p-1"> @Model.Description</div>
        <h4>@Model.Price.ToString("c")</h4>
    </div>
</div>