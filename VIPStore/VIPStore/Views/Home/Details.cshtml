@model ProductListViewModel


  
            <div class="row">
                <div class="col-md-8">
                    @foreach (var d in Model.Products)
                    {
                        <h2>
                            @d.Name
                            <span class="badge badge-pill badge-primary" style="float:right"></span>
                        </h2>
                        <img src="~/Image/@d.UrlImage" alt="Alternate Text" />
                        <br />
                        <div class="card-text p-1"> @d.Description</div>
                        <h4>@d.Price.ToString("c")</h4>
                    }
                </div> <!-- /.col-md-4 -->
            </div> <!-- /.row -->
 
